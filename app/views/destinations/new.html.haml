= render "items/header"
- breadcrumb :destination_new
= render "layouts/breadcrumbs"
= render "layouts/notice"
.myPage
  .myPage__sidebar
    = render "users/sidebar"
  .myPage__main
    .destination
      .destination__title
        お届け先住所の登録
      = form_with model: @destination, class: "destination__form", local: true do |f|
        .formField
          .formField__label
            お名前
            %span.mandatory 必須
          .formField__input
            .formField__input--left
              = f.text_field :family_name, {placeholder: "例)佐藤"}
            .formField__input--right
              = f.text_field :first_name, {placeholder: "例)太郎"}
        .formField
          .formField__label
            お名前(カナ)
            %span.mandatory 必須
          .formField__input
            .formField__input--left
              = f.text_field :family_name_kana,{placeholder: "例)サトウ"}
            .formField__input--right
              = f.text_field :first_name_kana, {placeholder: "例)タロウ"}
        .formField
          .formField__label
            = f.label :postal_code ,"郵便番号(ハイフンなし)"
            %span.mandatory 必須
          .formField__input
            = f.text_field :postal_code, {placeholder: "例)1234567", maxlength: 7, minlength: 7}
        .formField
          .formField__label
            = f.label :prefecture, "都道府県"
            %span.mandatory 必須
          .formField__input
            = f.collection_select :prefecture_id, Prefecture.all, :id, :name, {prompt: "選択してください"}
        .formField
          .formField__label
            = f.label :city, "市町村"
            %span.mandatory 必須
          .formField__input
            = f.text_field :city, {placeholder: "例)〇〇市〇〇甲"}
        .formField
          .formField__label
            = f.label :house_number, "番地"
            %span.mandatory 必須
          .formField__input
            = f.text_field :house_number, {placeholder: "例)1234-5"}
        .formField
          .formField__label
            = f.label :building_name,"建物名"
            %span.optional 任意
          .formField__input
            = f.text_field :building_name, {placeholder: "例)〇〇ビル"}
        .formField
          .formField__label
            = f.label :telephone, "電話"
            %span.optional 任意
          .formField__input
            = f.text_field :telephone, {placeholder: "例)09012345678", type: "tel"}

        = f.submit "登録", class: "formField__btn"

      .back
        = link_to '前の画面へ', user_destinations_path(current_user.id)
        
= render "items/footer"