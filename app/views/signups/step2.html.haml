.AccountPage
  .AccountPage__header
    = link_to root_path do
      = image_tag 'logo/logo.png', alt: 'furima'
  .AccountPage__form
    .AccountPage__form__title
      新規登録画面
    = form_for @profile, url: step2_signups_path, method: :post do |f|
      .ErrorMessages
        = render 'error_messages', model: f.object
      .FormField
        .FormField__label--normal
          = f.label :family_name
          %span 必須
        .FormField__input--normal
          = f.text_field :family_name, autofocus: true
      .FormField
        .FormField__label--normal
          = f.label :family_name_kana
          %span 必須
        .FormField__input--normal
          = f.email_field :family_name_kana
      .FormField
        .FormField__label--normal
          = f.label :birthday
          %i (英数字7文字以上)
          %span 必須
        .FormField__input--normal
          = f.password_field :birthday, autocomplete: "off"
      .FormField
        .FormField__label--normal
          = f.label :first_name
          %span 必須
        .FormField__input--normal
          = f.password_field :first_name, autocomplete: "off"
      .actions
        = f.submit "新規登録", class: 'Button CreateAccountButton'
    .AccountPage__form__toLoginOrSignIn
      %p アカウントをお持ちの方はこちら
      = link_to "ログイン画面へ", new_user_session_path, class: 'Button'
  .AccountPage__footer
    = image_tag 'logo/logo-white.png', alt: 'furima'