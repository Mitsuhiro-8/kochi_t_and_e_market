.AccountPage
  = render 'layouts/notice'
  .AccountPage__header
    = link_to root_path do
      = image_tag 'logo/logo.png', alt: 'furima'
  .AccountPage__form
    .AccountPage__form__top
      新規登録画面 2/3
    .AccountPage__form__title
      本人確認情報入力
    = form_for @profile, url: step2_signups_path, method: :post do |f|
      .FormField
        .FormField__label--normal
          お名前
          %span.mandatory 必須
        .FormField__errorMessage
          = @profile.errors.full_messages_for(:family_name).first
        .FormField__errorMessage
          = @profile.errors.full_messages_for(:first_name).first
        .FormField__input--small
          = f.text_field :family_name, autofocus: true, placeholder: '姓'
          = f.text_field :first_name, autofocus: true, placeholder: '名'
      .FormField
        .FormField__label--normal
          お名前（カナ）
          %span.mandatory 必須
        .FormField__errorMessage
          = @profile.errors.full_messages_for(:family_name_kana).first
        .FormField__errorMessage
          = @profile.errors.full_messages_for(:first_name_kana).first
        .FormField__input--small
          = f.text_field :family_name_kana, autofocus: true, placeholder: 'セイ'
          = f.text_field :first_name_kana, autofocus: true, placeholder: 'メイ'
      .FormField
        .FormField__errorMessage
          = @profile.errors.full_messages_for(:birthday).first
        .FormField__label--normal
          = f.label :birthday, "生年月日"
          %span.mandatory 必須
        .FormField__input--normal
          = f.date_select :birthday, use_month_numbers: true,start_year: 1930, end_year: (Time.now.year), default: Date.new(1989, 1, 1)
      .actions
        = f.submit "次へ", class: 'Button CreateAccountButton'
  .AccountPage__footer
    = image_tag 'logo/logo-white.png', alt: 'furima'