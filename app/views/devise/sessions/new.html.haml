= render "layouts/notice"
.AccountPage
  .AccountPage__header
    = link_to root_path do
      = image_tag 'logo/logo.png', alt: 'furima'
  .AccountPage__form
    .AccountPage__form__title
      ログイン画面
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .ErrorMessages
        = devise_error_messages!
      .FormField
        .FormField__label--normal
          = f.label :email
        .FormField__input--normal
          = f.email_field :email, autofocus: true
        .FormField
          .FormField__label--normal
            = f.label :password
            %i (英数字7文字以上)
          .FormField__input--normal
            = f.password_field :password, autocomplete: "off"
        .actions
          = f.submit "ログイン", class: 'Button'
    .AccountPage__form__toLoginOrSignIn
      %p アカウントをお持ちでない方はこちら
      = link_to "新規登録画面へ", step1_signups_path, class: 'Button'
  .AccountPage__footer
    = image_tag 'logo/logo-white.png', alt: 'furima'
