.ItemPage
  = render 'header'
  .ItemProfile
    .ItemProfile__name
      = @item.name
    .ItemProfile__status
      .ItemProfile__status__images
        .ItemProfile__status__images__selected
          = image_tag 'example/product.jpg', alt: '商品画像', class: 'SelectedImage'
        .ItemProfile__status__images__list
          - 5.times do
            = image_tag 'example/product.jpg', alt: '商品画像', class: "ListImage"
          = image_tag 'pict/pict-reason-01.jpg', alt: '商品画像', class: "ListImage"
      .ItemProfile__status__table
        %table
          %tr
            %th
              出品者
            %td
              = link_to "#" do
                = @item.user.nick_name
          %tr
            %th
              カテゴリー
            %td
              - if @category_parent
                = link_to ">#{@category_parent.name}", "#" 
              %br
              - if @category_child
                = link_to ">#{@category_child.name}", "#"
              %br
              = link_to ">#{@category_grandchild.name}", "#"
          %tr
            %th
              ブランド
            %td
              - if @item.brand
                = link_to "#" do
                  = @item.brand.name
          %tr
            %th
              商品の状態
            %td
              = @item.condition.name
          %tr
            %th
              配送料の負担
            %td
              = @item.shipping_cost.content
          %tr
            %th
              配送元の地域
            %td
              = @item.prefecture.name
          %tr
            %th
              配送日の目安
            %td
              = @item.preparation_day.period
    .ItemProfile__priceBox
      .ItemProfile__priceBox__price
        = @item.price
      .ItemProfile__priceBox__tax
        （税込）
      .ItemProfile__priceBox__shipping
        送料込み
    - if @item.user_id == current_user.id # 出品者本人なら編集と削除できる
      = link_to item_path, method: :delete, data: { confirm: "本当に削除してもよろしいですか？" } do
        .ItemProfile__deleteButton
          商品を削除する
      = link_to edit_item_path(@item.id) do
        .ItemProfile__buyButton
          商品の編集
    - elsif @item.trading_status == "出品中" #  出品中なら購入できる
      = link_to purchase_confirmation_item_path do
        .ItemProfile__buyButton
          購入画面に進む
    - else # 出品中ではないので購入できない
      .ItemProfile__soldOutButton
        売り切れ
    .ItemProfile__text
      = @item.introduction
  = form_with url: '#' do |f|
    .CommentForm
      = f.text_area :text, class: 'CommentForm__textArea'
      .CommentForm__info
        %div 相手のことを考え丁寧なコメントを心がけましょう。
        %div 不快な言葉遣いなどは利用制限や退会処分となることがあります。
      = f.submit 'コメントする', class: 'CommentForm__button'
  = render 'banner'
  = render 'footer'
  .ViewImageArea
    = image_tag 'example/product.jpg', alt: '商品画像', class: 'ViewImage'
