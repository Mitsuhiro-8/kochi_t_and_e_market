.sellItemPage
  = render 'shared/head'
  .body
    .main
      = form_with model: item, class: 'sellItem', local: true do |f|
        .ErrorMessages
          = render './shared/error_messages', model: f.object
        .imageSend
          .itemDetailName
            %label.label 出品画像
            %span.sideLabel 必須
          %p.imageSend__text 写真をアップロードできます
          .imageSend__dropBox
            - if item.id == nil
              .imageSend__dropBox__list
                = f.fields_for :item_images do |i|
                  .js-file_group{:class => "input_0", "data-index" => 0}
                    = i.file_field :src, {id: "image_0", class: 'js-file', name: "item[item_images_attributes][0][src]"}
              %label{for: 'image_0', class: 'imageSend__dropBox__label'}
                = image_tag('icon/icon_camera.png', class: 'icon')
            - else
              .imageSend__dropBox__list
                = f.fields_for :item_images do |i|
                  // roop
                  .js-file_group{:class => "input_#{i.index}", "data-index" => i.index}
                    = i.file_field :src, {id: "image_#{i.index}", class: 'js-file', name: "item[item_images_attributes][#{i.index}][src]"}
                  
                  .UploadImageBox
                    .UploadImageBox__image
                      = image_tag("#{i.object.src}", alt: "商品画像", "data-index" => i.index)
                    .UploadImageBox__menu
                      %label{:for => "image_#{i.index}"} 編集
                      .js-remove{"data-index" => i.index} 削除
                  // roop-end
                .js-file_group{:class => "input_#{item.item_images.length}", "data-index" => item.item_images.length}
                  %input.js-file{:id => "image_#{item.item_images.length}", :name => "item[item_images_attributes][#{item.item_images.length}][src]", :type => "file"}
                  %br
              %label{for: "image_#{item.item_images.length}", class: 'imageSend__dropBox__label'}
                = image_tag('icon/icon_camera.png', class: 'icon')

        .itemMain
          .itemDetailName
            %label.label 商品名
            %span.sideLabel 必須
          .itemName
            = f.text_field :name, {class: 'itemName__input', placeholder: '40文字以内', maxlength: '40'}
          .itemDetailName
            %label.label 商品の説明
            %span.sideLabel 必須
          .itemExplan
            = f.text_area :introduction, {class: 'itemExplan__input', placeholder: "商品の説明（必須1,000文字以内）\n(色、素材、重さ、定価、注意点など）\n\n例）2010年頃に1万円で購入したジャケットです。ライトグレーで傷はありません。あわせやすいのでおすすめです。", rows: '10', maxlength: '1000'}
        
        .itemDetail
          %p.grayTextTitle 商品詳細
          .itemDetail__category
            .itemDetailName
              %label.label カテゴリー
              %span.sideLabel 必須
            .categoryChoice
              - if item.category_id == nil || item.category_id == 0
                = f.collection_select :category_id, @category_parent_array, :id, :name, { include_blank: '選択してください' }, { class: 'selectBoxBtn__form', id: 'parent_category' }
              - else
                = f.collection_select :category_id, @category_parent_array, :id, :name, { prompt: '選択してください', selected: @category_parent.id }, { class: 'selectBoxBtn__form', id: 'parent_category' }
                - if item.category != nil
                  #children_wrapper.categoryChoice__added
                    .categoryChoice__form
                      = f.collection_select :category_id, @category_child_array, :id, :name, { prompt: '選択してください', selected: @category_child.id }, { class: 'selectBoxBtn__form', id: 'child_category' }
                - if item.category != nil
                  #grandchildren_wrapper.categoryChoice__added
                    .categoryChoice__form
                      = f.collection_select :category_id, @category_grandchildren_array, :id, :name, { prompt: '選択してください', selected: @category_grandchild.id }, { class: 'selectBoxBtn__form', id: 'grandchild_category' }
          .itemDetailName
            %label.label ブランド
            %span.grayLabel 任意
          .brandForm
            - if item.brand == nil
              = f.text_field :brand,{class: 'brandForm__field', placeholder: '例）シャネル'}
            - else
              = f.text_field :brand,{class: 'brandForm__field', placeholder: '例）シャネル', value: item.brand.name}
          .itemDetailName
            %label.label 商品の状態
            %span.sideLabel 必須
          .selectBoxBtn
            = f.collection_select :condition_id, Condition.all, :id, :name, {prompt: "選択してください"}, class: 'selectBoxBtn__form'
        .delivery
          %p.grayTextTitle 配送について
          .itemDetailName
            %label.label 配送料の負担
            %span.sideLabel 必須
          .selectBoxBtn
            = f.collection_select :shipping_cost_id, ShippingCost.all, :id, :content, {prompt: "選択してください"}, class: 'selectBoxBtn__form'
          .itemDetailName
            %label.label 配送元の地域
            %span.sideLabel 必須
          .selectBoxBtn
            = f.collection_select :prefecture_id, Prefecture.all, :id, :name, {prompt: "選択してください"}, class: 'selectBoxBtn__form'
          .itemDetailName
            %label.label 配送までの日数
            %span.sideLabel 必須
          .selectBoxBtn
            = f.collection_select :preparation_day_id, PreparationDay.all, :id, :period, {prompt: "選択してください"}, class: 'selectBoxBtn__form'
        
        .itemPrice
          %p.grayTextTitle  価格（¥300〜9,999,999）
          .sellForm
            .itemDetailName
              %label.label 販売価格
              %span.sideLabel 必須
            .priceInput
              %p.yen ¥
              .priceInput__form
                = f.number_field :price, {class: 'priceInput__form__box', placeholder: '0'}
        
        .submitBtn
          .sendBtn
            - if item.id == nil
              = f.submit '出品する', {class: 'sendBtn__submit'}
            - else
              = f.submit '編集を完了する', {class: 'sendBtn__submit'}
          .backBtn
            = link_to root_path, class: 'backBtn__submit' do
              もどる
        
        .note
          %p.note__messages
            禁止されている行為および出品物を必ずご確認ください。偽ブランド品や盗品物などの販売は犯罪であり、法律により処罰される可能性があります。 また、出品をもちまして加盟店規約に同意したことになります。
  = render 'shared/under'