.sellItemPage
  = render 'shared/head'
  .body
    .main
      = form_with class: 'sellItem' do |f| #itemモデル追加
        
        .imageSend
          .itemDetailName
            %label.label 出品画像
            %span.sideLabel 必須
          %p.imageSend__text 写真をアップロードできます
          .imageSend__dropBox
            .imageSend__dropBox__label
              %input{type: 'file'}

        .itemMain
          .itemDetailName
            %label.label 商品名
            %span.sideLabel 必須
          .itemName
            = f.text_field '#', {class: 'itemName__input', placeholder: '40文字以内'}
          .itemDetailName
            %label.label 商品の説明
            %span.sideLabel 必須
          .itemExplan
            = f.text_area '#', {class: 'itemExplan__input', placeholder: "商品の説明（必須1,000文字以内）\n(色、素材、重さ、定価、注意点など）\n\n例）2010年頃に1万円で購入したジャケットです。ライトグレーで傷はありません。あわせやすいのでおすすめです。", rows: '10'}
        
        .itemDetail
          %p.grayTextTitle 商品の説明
          .itemDetail__category
            .itemDetailName
              %label.label カテゴリ
              %span.sideLabel 必須
            .categoryChoice
              = f.select '#', {class:'categoryChoice__Form'}
          .itemDetailName
            %label.label ブランド
            %span.grayLabel 任意
          .brandForm
            = f.text_field '#',{class: 'brandForm__field', placeholder: '例）シャネル'}
          .itemDetailName
            %label.label 商品の状態
            %span.sideLabel 必須
          .selectBoxBtn
            = f.select '#', { class: 'selectBoxBtn__form'}
        
        .delivery
          %p.grayTextTitle 配送について
          .itemDetailName
            %label.label 配送料の負担
            %span.sideLabel 必須
          .selectBoxBtn
            = f.select '#', { class: 'selectBoxBtn__form'}
          .itemDetailName
            %label.label 配送元の地域
            %span.sideLabel 必須
          .selectBoxBtn
            = f.select '#', { class: 'selectBoxBtn__form'}
          .itemDetailName
            %label.label 配送までの日数
            %span.sideLabel 必須
          .selectBoxBtn
            = f.select '#', { class: 'selectBoxBtn__form'}
        
        .itemPrice
          %p.grayTextTitle  価格（¥300〜9,999,999）

            


          
            
            
            
          
  
  .under